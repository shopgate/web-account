{
  "version": "1.0.0",
  "id": "@shopgate/shopware-myaccount-orderhistory",
  "components": [
    {
      "id": "AccountSectionAndroid",
      "path": "frontend/portals/AccountAndroid",
      "target": "nav-menu.scanner.after",
      "type": "portals"
    },
    {
      "id": "OrderHistoryiOS",
      "path": "frontend/portals/OrderHistoryiOS",
      "target": "nav-menu.logout.before",
      "type": "portals"
    },
    {
      "id": "MyAccountiOS",
      "path": "frontend/portals/MyAccountiOS",
      "target": "nav-menu.logout.before",
      "type": "portals"
    },
    {

      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    }
  ],
  "configuration": {
    "showOverview": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "type": "checkbox",
        "label": "Show overview link"
      }
    },
    "showProfile": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox",
        "label": "Show overview link"
      }
    },
    "showAddresses": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "type": "checkbox",
        "label": "Show addresses link"
      }
    },
    "showOrders": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "type": "checkbox",
        "label": "Show order history link"
      }
    },
    "overviewReplacement": {
      "type": "admin",
      "destination": "frontend",
      "default": "/login?redirectTo=frontend.account.home.page&",
      "params": {
        "type": "text",
        "label": "Replacement for account overview path"
      }
    },
    "profileReplacement": {
      "type": "admin",
      "destination": "frontend",
      "default": "/login?redirectTo=frontend.account.profile.page&",
      "params": {
        "type": "text",
        "label": "Replacement for account profile path"
      }
    },
    "addressReplacement": {
      "type": "admin",
      "destination": "frontend",
      "default": "/login?redirectTo=frontend.account.address.page&",
      "params": {
        "type": "text",
        "label": "Replacement for account address path"
      }
    },
    "ordersReplacement": {
      "type": "admin",
      "destination": "frontend",
      "default": "/login?redirectTo=frontend.account.order.page&",
      "params": {
        "type": "text",
        "label": "Replacement for account orders path"
      }
    },
    "checkoutToReplace": {
      "type": "admin",
      "destination": "frontend",
      "default": "/login?",
      "params": {
        "type": "text",
        "label": "The Part of the Checkout Path to Replace"
      }
    }
  }
}
